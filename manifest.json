{
  "manifest_version": 3,
  "name": "Skipper Ext",
  "version": "1.0",
  "description": "Controlla qualsiasi video player con skip e forward personalizzati",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "GUI/popup.html",
    "default_title": "Skipper Ext"
  },
  
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}